{
  "name": "caf_hellopresent",
  "description": "Cloud Assistants presentation tool example",
  "version": "0.2.4",
  "author": "Antonio Lain <antlai@cafjs.com>",
    "dependencies": {
        "react" : "^0.14.0",
        "react-dom" : "^0.14.0",
        "react-bootstrap" : "^0.28.1",
        "react-addons-transition-group": "^0.14.0",
        "keymirror": "^0.1.0",
        "redux": "^3.5.0",
        "caf_core": "^0.2.0",
        "caf_sms": "^0.2.0",
        "caf_forward" : "^0.2.0",
        "caf_cli": "^0.2.0",
        "caf_sharing": "^0.2.0",
        "caf_transport": "^0.2.0",
        "jstat": "^1.5.3",
        "object-assign": "^4.1.0",
        "recharts" : "^0.14.2",
        "highlight.js": "^9.7.0",
        "reveal.js" : "^3.3.0",
        "superagent" : "^3.3.1"
   },
    "devDependencies": {
        "nodeunit" : ">=0.9",
        "browserify" : "^13.0.0",
        "uglify-js" : "^2.4.0"
    },
    "scripts": {
       "start" : "node ./index.js",
        "test": "node ./node_modules/.bin/nodeunit",
        "build-common": "rm -fr ./public/reveal; mkdir -p ./public/reveal/; cp -r ./node_modules/reveal.js/js ./public/reveal; cp -r ./node_modules/reveal.js/css ./public/reveal; cp -r ./node_modules/reveal.js/plugin ./public/reveal; cp -r ./node_modules/reveal.js/lib ./public/reveal",
        "build-js" : "browserify  -d public/js/main.js -o public/js/build.js",
        "build-min-js" : "export NODE_ENV=production; browserify public/js/main.js | uglifyjs > public/js/build.min.js",
        "build": "npm run build-common && npm run build-js && npm run build-min-js"
    },
   "main": "index",
  "engines": { "node": ">= 0.10.29" }
}
